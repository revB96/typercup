        </select>
      </div>
      <div class="mb-3">
        <label for="teamName">Reprezentacja</label>
        <input type="text" class="form-control" name="teamName" id="teamName" required />
      </div>
      <div class="mb-3">
        <label for="shortcut">Skrót</label>
        <input type="text" class="form-control" name="shortcut" required />
      </div>
