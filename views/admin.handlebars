  <div class="tab-pane fade" id="pills-schedule" role="tabpanel" aria-labelledby="pills-schedule-tab">
    <form id="add-schedule-form" enctype="application/x-www-form-urlencoded">
      <h3>Dodaj nowe spotkanie</h3>
      <div class="mb-3">
        <label for="add-match-select-group">Grupa</label>
        <select id="add-match-select-group" class="form-select" name="group" onchange="adminSelectTeams()" required>
          <option value="A">A</option>
          <option value="B">B</option>
          <option value="C">C</option>
          <option value="D">D</option>
          <option value="E">E</option>
          <option value="F">F</option>
          <option value="G">G</option>
          <option value="H">H</option>
          <option value="ALL">[ALL]</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="team1">Reprezentacja I</label>
        <select id="add-match-select-team1" class="form-select" name="team1" required>
        </select>
      </div>
      <div class="mb-3">
        <label for="team2">Reprezentacja II</label>
        <select id="add-match-select-team2" class="form-select" name="team2" required>
        </select>
      </div>
      <div class="mb-3">
        <label for="stage">Etap</label>
          <select id="add-match-select-stage" class="form-select" name="stage" required>
            <option value="group">Grupa</option>
            <option value="18">1/8</option>
            <option value="14">1/4</option>
            <option value="12">1/2</option>
            <option value="final">Finał</option>
        </select>
      </div>
      <div class="mb-3">
        <div class="row">
          <div class="col">
            <label for="group">Data</label>
            <input name="matchDate" type="date" class="form-control" required />
          </div>
          <div class="col">
            <label for="matchTime">Godzina</label>
            <select id="add-match-machTime" class="form-select" name="matchTime" required>
              <option value="11:00:00">11:00</option>
              <option value="14:00:00">14:00</option>
              <option value="16:00:00">16:00</option>
              <option value="17:00:00" selected>17:00</option>
              <option value="20:00:00">20:00</option>
            </select>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Dodaj</button>
    </form>
    <h3>Terminarz</h3>
