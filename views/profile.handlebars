<div class="row mt-3">
  <h3>Ustawienia</h3>
		<div class="col-md-6">
      <h5>Zmień hasło</h5>
      <form id="change-password-form" enctype="application/x-www-form-urlencoded">
        <div class="mb-3">
          <label for="password" class="form-label">Nowe hasło</label>
          <input type="password" class="form-control" id="password1" onchange="checkPasswords()" name="password">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Powtórz</label>
          <input type="password" class="form-control" id="password2" onchange="checkPasswords()">
        </div>
        <div id="change-password-form-message" class="form-text"></div>
         <input type="text" class="form-control d-none" id="change-password-form-userId" name="userId">
        <button id="change-password-button" type="submit" class="btn btn-primary disabled">Zapisz</button>
      </form>
		</div>
		<div class="col-md-6">
      <h5>Powiadomienia email</h5>
      <form class="row g-3">
        <div class="col-auto">
          <label for="profile-email" class="visually-hidden">E-mail</label>
          <input type="email" class="form-control" id="profile-email">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary mb-3">Aktualizuj</button>
        </div>
      </form>
      <div id="user-notifications-settings"></div>
		</div>
	</div>

  <div class="row mt-4">
    <div class="accordion accordion-flush" id="accordionFlushExample">
      <div class="accordion-item">
        <h2 class="accordion-header " id="flush-headingOne">
          <button class="accordion-button collapsed bg-primary" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne" style="color: aliceblue;">
            <h5>Lista twoich typów</h5>
          </button>
        </h2>
        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
          <div class="accordion-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover table-sm" style="text-align: center;">
                <thead>
                  <tr>
                    <th scope="col">Kolejka</th>
                    <th scope="col">Mecz</th>
                    <th scope="col">Typ</th>
                    <th scope="col">Prawidłowy wynik</th>
                    <th scope="col">Punkty</th>
                    <th scope="col">Data zapisania</th>
                  </tr>
                </thead>
                <tbody id="profile-user-ticket-table">
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>

    </div>
  </div>